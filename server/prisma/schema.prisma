generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id() @default(uuid())
  name      String
  email     String      @unique
  password  String?
  provider  OAuth_enum  @default(local)
  events    Event[]
  rsvps     RSVP[]

  @@index([email])
}

model Event {
  id             String       @id() @default(uuid())
  name           String
  date           DateTime
  start          DateTime
  end            DateTime
  location       String?
  media          Media[]
  expectedGifts  String[]

  organizer      User         @relation(fields: [organizerId], references: [id], onDelete: Cascade)
  organizerId    String

  rsvps          RSVP[]

  @@index([date])
}

model Media {
  id            String       @id() @default(uuid())
  eventId       String
  cloudinaryId  String?
  imageUrl      String

  event         Event        @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model RSVP {
  id          String      @id() @default(uuid())
  eventId     String
  guestNames  String[]
  email       String      @unique
  name        String
  notes       String?
  registry    String[]
  userId      String?

  event       Event       @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user        User?       @relation(fields: [userId], references: [id], onDelete: SetNull)
}

enum OAuth_enum {
  local
  google
}

